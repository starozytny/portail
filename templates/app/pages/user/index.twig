{% extends 'app/layout/layout.twig' %}

{% block title %}Mon compte {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% webpack_entry_css 'user' %}
{% endblock %}

{% block main_content %}
    <div class="page-title">
        <div class="page-title-container">
            <h1>Mon compte</h1>
        </div>
    </div>

    <div class="main-content">
        <div class="user-container">
            <div class="col-1">
                <div class="form-user">
                    <div class="card">
                        <div class="card-header">
                            <span class="card-header-firstname">{{ session.user[2] | capitalize }}</span>
                            <span class="card-header-lastname">{{ session.user[3] | upper }}</span>
                        </div>
                        <div class="card-body">
                            <form class="user-form user-form-main" data-id="main" data-url="{{ url_for('user_update', {'id': session.user[7]}) }}" method="POST">
                                <div class="line">
                                    {% include 'app/layout/components/form/input.twig' with {
                                        input_name: 'firstname',
                                        input_label: 'Prénom',
                                        input_value: session.user[2],
                                        input_required: true
                                    } %}
                                </div>
                                <div class="line">
                                    {% include 'app/layout/components/form/input.twig' with {
                                        input_name: 'lastname',
                                        input_label: 'Nom',
                                        input_value: session.user[3],
                                        input_required: true
                                    } %}
                                </div>
                                <div class="line">
                                    {% include 'app/layout/components/form/input.twig' with {
                                        input_name: 'email',
                                        input_label: 'Adresse e-mail',
                                        input_value: session.user[5],
                                        input_required: true,
                                        input_type: 'email'
                                    } %}
                                </div>
                                <input type="hidden" name="userTag" class="userTag" value="{{ session.user[6] }}">
                                <div class="form-button">
                                    <button type="submit" class="btn btn-warning">Modifier</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-2">
                <div class="user-downloads">
                    <a href="" class="btn btn-outline-default">
                        <span class="icon-download"></span>
                        <span>Télécharger l'application mobile</span>
                    </a>
                    <a href="" class="btn btn-outline-default">
                        <span class="icon-download"></span>
                        <span>Télécharger la documentation</span>
                    </a>
                </div>

                <div class="user-users">
                    <div class="title">
                        <h2>Utilisateurs</h2>
                        <div class="actions">
                            <a href="" class="btn btn-primary">
                                <span>Ajouter un utilisateur</span>
                            </a>
                        </div>
                    </div>

                    <div class="users-list">
                        <div class="list-header">
                            <div class="item">
                                <div class="col-1">Identifiant</div>
                                <div class="col-2">Utilisateur</div>
                                <div class="col-3"></div>
                                <div class="col-4">Actions</div>
                            </div>
                        </div>
                        <div class="list-items">
                            {% if data | length > 0 %}
                                {% for elem in data %}
                                    {% set isBLocked = elem.is_blocked == 0 %}
                                    <div class="item">
                                        <div class="col-1">{{ elem.username }}</div>
                                        <div class="col-2">
                                            <div>{{ elem.first_name | capitalize }} {{ elem.last_name | upper }}</div>
                                            <div class="sub">{{ elem.user_tag }}</div>
                                        </div>
                                        <div class="col-3">
                                            {{ isBLocked ? "<div class='role-blocked'>Bloqué</div>" : "" }}
                                        </div>
                                        <div class="col-4">
                                            {% if elem.id != session.user[7] %}
                                                <a href="" class="btn-icon">
                                                    <span class="icon-{{ isBlocked ? "minus" : "block" }}"></span>
                                                    <span class="tooltip">{{ isBLocked ? "Débloquer" : "Bloquer"}}</span>
                                                </a>
                                                <a href="" class="btn-icon">
                                                    <span class="icon-compose"></span>
                                                    <span class="tooltip">Modifier</span>
                                                </a>
                                                <a href="" class="btn-icon">
                                                    <span class="icon-delete"></span>
                                                    <span class="tooltip">Supprimer</span>
                                                </a>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endfor %}
                            {% else %}
                                <div class="item">Aucun utilisateur enregistré.</div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% webpack_entry_js 'user' %}
{% endblock %}