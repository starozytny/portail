<div class='aside true aside-add-bien'>
    <div class="aside-overlay"></div>
    <div class="aside-content">
        <div class="aside-title">
            <span class="title">Ajouter un bien</span>
            <span class="icon-cancel btn-add-bien"></span>
        </div>
        <div class="list list-add-bien">
            <form class="bien-form" data-url="{{ url_for('property_check') }}" method="POST">
                <div class="line line-2">
                    {% include 'app/layout/components/form/input.twig' with {
                        input_name: 'typeBien',
                        input_label: 'Type',
                        input_value: ''
                    } %}
                    {% include 'app/layout/components/form/input.twig' with {
                        input_name: 'reference',
                        input_label: 'Référence *',
                        input_value: '',
                    } %}
                </div>
                <div class="line line-2">
                    {% include 'app/layout/components/form/input.twig' with {
                        input_name: 'owner',
                        input_label: 'Propriétaire',
                        input_value: ''
                    } %}
                    {% include 'app/layout/components/form/input.twig' with {
                        input_name: 'building',
                        input_label: 'Bâtiment',
                        input_value: ''
                    } %}
                </div>
                <div class="line line-2">
                    {% include 'app/layout/components/form/input.twig' with {
                        input_name: 'addr1',
                        input_label: 'Adresse 1 *',
                        input_value: '',
                    } %}
                    {% include 'app/layout/components/form/input.twig' with {
                        input_name: 'surface',
                        input_label: 'Surface (m²)',
                        input_value: 0
                    } %}
                </div>
                <div class="line line-2">
                    {% include 'app/layout/components/form/input.twig' with {
                        input_name: 'addr2',
                        input_label: 'Adresse 2',
                        input_value: '',
                        input_type: 'number'
                    } %}
                    {% include 'app/layout/components/form/input.twig' with {
                        input_name: 'room',
                        input_label: 'Pièce',
                        input_value: 0,
                        input_type: 'number'
                    } %}
                </div>
                <div class="line line-2">
                    {% include 'app/layout/components/form/input.twig' with {
                        input_name: 'addr3',
                        input_label: 'Adresse 3',
                        input_value: '',
                        input_type: 'number'
                    } %}
                    {% include 'app/layout/components/form/input.twig' with {
                        input_name: 'floor',
                        input_label: 'Etage',
                        input_value: 0,
                        input_type: 'number'
                    } %}
                </div>
                <div class="line line-2">
                    {% include 'app/layout/components/form/input.twig' with {
                        input_name: 'city',
                        input_label: 'Ville *',
                        input_value: '',
                    } %}
                    {% include 'app/layout/components/form/input.twig' with {
                        input_name: 'door',
                        input_label: 'Porte',
                        input_value: ''
                    } %}
                </div>
                <div class="line line-2">
                    {% include 'app/layout/components/form/input.twig' with {
                        input_name: 'zipcode',
                        input_label: 'Code postal *',
                        input_value: '',
                    } %}
                    {% include 'app/layout/components/form/box.twig' with {
                        input_name: 'isFurniture',
                        input_label: 'Le bien est ?',
                        input_value: 1,
                        input_choices: [
                            {value: 0, label: 'Meublé', name: 'meuble'},
                            {value: 1, label: 'Non meublé', name: 'non-meuble'},
                        ],
                        input_class: 'radiobox-item',
                        input_type: 'radio'
                    } %}
                </div>
                <div class="line">
                    <div class="alert alert-default"><p>(*) champs obligatoires</p></div>
                </div>
                <div class="form-button">
                    <button type="submit" class="btn btn-primary">Valider la saisie</button>
                </div>
            </form>
        </div>
    </div>
</div>